<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_back"
            android:background="#00ff0000"
            />

        <TextView
            android:text="결과 페이지"
            android:textSize="20dp"

            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gmarket_sans_ttf_medium"/>

        <ImageView
            android:id="@+id/imgR"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="30dp"
            android:adjustViewBounds="true"
            android:background="@drawable/radius"
            android:scaleType="centerCrop" />

        <TextView
                android:id="@+id/txtTitle"
                android:text="질병이름"
                android:textSize="40dp"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarket_sans_ttf_medium"/>

            <TextView
                android:id="@+id/txtContent"
                android:text="내용"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarket_sans_ttf_light"/>

            <Button
                android:id="@+id/btnMap"
                android:text="주변 병원 페이지 바로가기"
                android:background="@drawable/radius_color"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:elevation="5dp"/>

            <Button
                android:id="@+id/btnDictionary"
                android:text="질병 사전 바로가기"
                android:background="@drawable/radius_color"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gmarket_sans_ttf_medium"
                android:elevation="5dp"/>

    </LinearLayout>

</ScrollView>