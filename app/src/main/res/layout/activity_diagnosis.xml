<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_back"
            android:background="#00ff0000"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사진을 선택해주세요."
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            android:textAlignment="center"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="30dp"
            android:background="@drawable/radius"
            android:layout_marginBottom="80dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_photo"
            android:background="@drawable/radius"
            android:text="사진 촬영하여 이미지 불러오기"
            android:fontFamily="@font/gmarket_sans_ttf_light"
            android:drawableRight="@drawable/ic_camera"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="15dp"
            android:elevation="20dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/btn_image"
            android:background="@drawable/radius"
            android:text="앨범에서 이미지 불러오기"
            android:textSize="15dp"
            android:drawableRight="@drawable/ic_image"
            android:fontFamily="@font/gmarket_sans_ttf_light"
            android:drawablePadding="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:elevation="20dp"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/sendBtn"
            android:background="@drawable/radius_color"
            android:text="send"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="70dp"
            android:fontFamily="@font/gmarket_sans_ttf_medium"
            android:layout_gravity="right"
            android:elevation="20dp"
            />

    </LinearLayout>

</ScrollView>